<Window x:Class="Sample.Wpf.Presentation.Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sample.Wpf.Presentation.Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Text="{Binding FirstName, ValidatesOnDataErrors=True}" Margin="5"/>
        <TextBox Grid.Row="1" Text="{Binding LastName, ValidatesOnDataErrors=True}" Margin="5"/>
        <TextBox Grid.Row="2" Text="{Binding FullName, Mode=OneWay, ValidatesOnDataErrors=True}" IsReadOnly="true" Margin="5"/>
        <Button Grid.Row="3"  Content="Validate" Command="{Binding ValidateCommand}"/>
    </Grid>
</Window>
